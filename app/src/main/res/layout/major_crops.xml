<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout_crops"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#ffffff"
        android:focusable="true"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_background_3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/crop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"

                    android:gravity="center"
                    android:text="Crop Name :"
                    android:textColor="@color/black_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qestion_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urdu"
                    android:layoutDirection="rtl"
                    android:lineSpacingExtra="6dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="12dp"
                    android:text=""
                    android:textColor="#AD1457"
                    android:textSize="30sp" />

                <RadioGroup
                    android:id="@+id/rg_answer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <RadioButton
                        android:id="@+id/rbtn_ans1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/view_background_2"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="12dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="1"
                        android:text=""
                        android:textColor="#0E0308"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/rbtn_ans2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/view_background_2"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="2"
                        android:text=""
                        android:textColor="#0E0308"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/rbtn_ans3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/view_background_2"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="3"
                        android:text=""
                        android:textColor="#0E0308"
                        android:textSize="24sp" />
                    <RadioButton
                        android:id="@+id/rbtn_ans4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/view_background_2"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="3"
                        android:text=""
                        android:textColor="#0E0308"
                        android:textSize="24sp" />
                    <RadioButton
                        android:id="@+id/rbtn_ans5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/view_background_2"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="3"
                        android:text=""
                        android:textColor="#0E0308"
                        android:textSize="24sp" />
                    <RadioButton
                        android:id="@+id/rbtn_ans6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/view_background_2"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="3"
                        android:text=""
                        android:textColor="#0E0308"
                        android:textSize="24sp" />
                    <RadioButton
                        android:id="@+id/rbtn_ans7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/view_background_2"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="3"
                        android:text=""
                        android:textColor="#0E0308"
                        android:textSize="24sp" />
                    <RadioButton
                        android:id="@+id/rbtn_ans8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/view_background_2"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="3"
                        android:text=""
                        android:textColor="#0E0308"
                        android:textSize="24sp" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
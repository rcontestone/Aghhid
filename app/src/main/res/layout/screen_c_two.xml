                            android:layout_marginTop="37dp"
                            android:layout_marginRight="30dp"
                            android:gravity="right"
                            android:text="@string/aghhid_tv_c_2"
                            android:textColor="@color/OrangeRed"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"


                            />

                        <EditText

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:padding="16dp"
    android:background="@drawable/view_background_button"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtFarmerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rightSideIcon"
        android:text="Attock"
        android:textColor="#96144C"
        android:textSize="16sp" />

    <TextView
        android:layout_below="@+id/txtFarmerID"
        android:id="@+id/txtFarmerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rightSideIcon"
        android:text="Attock"
        android:textColor="#4CAF50"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/rightSideIcon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_right_grey600_24dp"/>


</RelativeLayout>
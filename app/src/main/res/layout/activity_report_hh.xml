<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Main.AddReportActivityHH">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/v_ic_app_name"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/application_name"
                    android:textColor="@color/color_white"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">


                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_left_white_24dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvTitle"
                        fontPath="fonts/Montserrat-Regular.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="Welcome to AG HHID Survey"
                        android:textColor="@color/color_white"
                        android:textStyle="normal"
                        tools:ignore="MissingPrefix" />

                </RelativeLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/txtErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Message"
                android:textColor="@color/black_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <RadioGroup
                android:id="@+id/report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/code_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9. HHID survey Completed. Starting Adolescent"
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/code_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Number Busy"
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"

                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/code_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Refusal "
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/code_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. No Answer (Person does not pick up call)"
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/code_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Respondent Not Willing to Continue"
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/code_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Invalid Number "
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/code_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Wrong Person"
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/code_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. Number not responding "
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/code_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9. Powered Off"
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/code_10_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10. Otherâ€¦"
                    android:textColor="@color/navy_color"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </RadioGroup>


            <LinearLayout
                android:id="@+id/callReasonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Reason for Call Duration less than 8 min"
                    android:textColor="@color/navy_color" />

                <EditText
                    android:id="@+id/callReasonEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounder_edittext"
                    android:ems="10"
                    android:hint="Specify the Reason"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/otherReasonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Specify the Reason"
                    android:textColor="@color/navy_color" />

                <EditText
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounder_edittext"
                    android:ems="10"
                    android:hint="Specify the Reason"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qm3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urdu"
                    android:layoutDirection="rtl"
                    android:lineSpacingExtra="24sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="12dp"
                    android:text="@string/section_m_question_q3"
                    android:textColor="#AD1457"
                    android:textSize="30sp" />

                <RadioGroup
                    android:id="@+id/rg_m3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <RadioButton
                        android:id="@+id/rbtn_m3_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="24sp"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="12dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="1"
                        android:text="@string/section_m_question_q3_option1"
                        android:textColor="#0E0308"
                        android:onClick="setMigrationM3"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/rbtn_m3_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="24sp"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="2"
                        android:onClick="setMigrationM3"
                        android:text="@string/section_m_question_q3_option2"
                        android:textColor="#0E0308"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/rbtn_m3_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="24sp"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="3"
                        android:text="@string/section_m_question_q3_option3"
                        android:textColor="#0E0308"
                        android:onClick="setMigrationM3"
                        android:textSize="24sp" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qm4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urdu"
                    android:layoutDirection="rtl"
                    android:lineSpacingExtra="24sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="12dp"
                    android:text="@string/section_m_question_q4"
                    android:textColor="#AD1457"
                    android:textSize="30sp" />

                <RadioGroup
                    android:id="@+id/rg_m4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <RadioButton
                        android:id="@+id/rbtn_m4_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="24sp"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="12dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="1"
                        android:text="@string/section_m_question_q4_option1"
                        android:textColor="#0E0308"
                        android:onClick="setMigrationM4"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/rbtn_m4_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="24sp"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="2"
                        android:text="@string/section_m_question_q4_option2"
                        android:textColor="#0E0308"
                        android:onClick="setMigrationM4"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/rbtn_m4_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="24sp"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="3"
                        android:text="@string/section_m_question_q4_option3"
                        android:onClick="setMigrationM4"
                        android:textColor="#0E0308"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/rbtn_m4_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="24sp"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="4"
                        android:text="@string/section_m_question_q4_option4"
                        android:onClick="setMigrationM4"
                        android:textColor="#0E0308"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/rbtn_m4_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/urdu"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="24sp"
                        android:maxWidth="10dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:tag="5"
                        android:text="@string/section_m_question_q4_option5"
                        android:textColor="#0E0308"
                        android:textSize="24sp" />

                </RadioGroup>

                <EditText
                    android:id="@+id/m4_other"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounder_edittext"
                    android:ems="10"
                    android:hint="Specify the Reason"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:visibility="visible" />
            </LinearLayout>

            <Button
                android:id="@+id/save_report"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:text="Save Report"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/back"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>
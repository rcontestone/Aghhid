<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@drawable/view_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:weightSum="3"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnEdit"
            android:layout_width="24dp"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:tint="@color/navy_blue"
            android:src="@drawable/ic_pencil_grey600_24dp"
            ></androidx.appcompat.widget.AppCompatImageView>
        <TextView
            android:id="@+id/txtID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:text="ID"
            android:textColor="#96144C"
            android:textSize="16sp" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_weight="1"
            android:tint="@color/red_color"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete_grey600_24dp"
            ></androidx.appcompat.widget.AppCompatImageView>
    </LinearLayout>



    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@drawable/view_background_f1_crop"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txtF1Crop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="Crop"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#96144C"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txtF1CropOther"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingBottom="8dp"
            android:text="Crop"
            android:textColor="#96144C"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_background_f1_crop"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txtF2aCanal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Crop"
            android:textColor="#96144C"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txtF2aAcre"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingBottom="8dp"
            android:text="Acre"
            android:textColor="#96144C"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@drawable/view_background_f2_crop"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txtF2bCrop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingBottom="8dp"
            android:text="Crop"
            android:textColor="#96144C"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txtF2bCropOther"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Crop"
            android:textColor="#96144C"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_background_f2_crop"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txtF2bCanal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Crop"
            android:textColor="#96144C"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txtF2bAcre"
            android:layout_width="0dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Acre"
            android:textColor="#96144C"
            android:textSize="16sp" />
    </LinearLayout>



</LinearLayout>
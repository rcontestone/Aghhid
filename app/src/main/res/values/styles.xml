<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />










    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Light">  </style>

    <style name="header_text_view" parent="AppBaseTheme">
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="forgot_btn_style" parent="AppBaseTheme">
        <!-- <item name="android:background">@drawable/forgot_your_password</item> -->
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="edit_fields_text_view" parent="AppBaseTheme">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textSize">15sp</item>
    </style>
    <style name="landing_buttons_text_view" parent="AppBaseTheme">
        <item name="android:textColor">@color/btn_text_view_color</item>
        <item name="android:shadowColor">@color/White</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:shadowDx">0.5</item>
    </style>

</resources>
